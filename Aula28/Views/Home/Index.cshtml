@model List<Person>

@{
	ViewData["Title"] = "App Escola";
}
<div class="container">
	<div class="row">
		<div class="col-auto">
			<h1>🎓</h1>
		</div>
		<div class="col"><h1> APP ESCOLA </h1></div>
	</div>
</div>

<div class="container m-3">
	<h1>#1 Turma</h1>
	<div class="row">
		<div class="col">
			<input type="text" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="Digite o nome do aluno:">
		</div>
		<div class="col-auto">
			<button type="submit" class="btn btn-primary btn-lg ms-2">&#128269;</button>
		</div>
	</div>
</div>




<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Nome</th>
			<th scope="col">Sobrenome</th>
			<th scope="col">Status</th>
		</tr>
	</thead>
	
	<tbody>
		
		
			@foreach(var people in Model){
				
				@if(people.Status == "Reprovado"){
						<tr class="table-danger">
							<th scope="row">@people.Id</th>
							<td>@people.Name </td>
							<td>@people.Sobrenome</td>
							<td>@people.Status </td>
						</tr>
				} else if(people.Status == "Recuperação"){
							<tr class="table-warning">
								<th scope="row">@people.Id</th>
								<td>@people.Name </td>
								<td>@people.Sobrenome</td>
								<td>@people.Status </td>
							</tr>
					}
					else
					{
								<tr>
								<th scope="row">@people.Id</th>
								<td>@people.Name </td>
								<td>@people.Sobrenome</td>
								<td>@people.Status </td>
								</tr>
					}

				
				

		
			}
		
	</tbody>
</table>
